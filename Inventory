import csv
import fileinput
import os
from datetime import datetime
#import xlwt
    
def get_letters():
    inventorylist = "C:/Users/rmorganstern/Desktop/PY/Overland/Ordering Guide.csv"
    brands = csv.reader(open(inventorylist))
    cdate = str(format(datetime.today(),"%Y-%m-%d"))
    file = "C:/Users/rmorganstern/Desktop/PY/Overland/Balance_Report/"+cdate+".csv"
    alphab=["*X", "*DONE"]
    for brand in brands:
        alpha = brand[0][0]
        if alpha not in alphab:
            alphab.append(alpha)
    alphab.sort()
    print alphab
    letter = raw_input('Enter your brand letter: ')
    l=str(letter).upper()
    if l=="X" or l=="x":
        exit
        quit
    elif l=="DONE":
        try:
            with open(file,'a') as balrep:
                balrep.close()

            print "OK, Thanks!"
        except:
            print "Nothing Recorded"
            exit
            quit
        get_sums()
    else:
        get_bottles(l)
        

def get_bottles(l):
    bottles=["X"]
    inventorylist = "C:/Users/rmorganstern/Desktop/PY/Overland/Ordering Guide.csv"
    brands = csv.reader(open(inventorylist))
    cdate = str(format(datetime.today(),"%Y-%m-%d"))
    file = "C:/Users/rmorganstern/Desktop/PY/Overland/Balance_Report/"+cdate+".csv"

    for brand in brands:
        alpha = brand[0][0]
        if alpha == l or alpha == l.lower():
            bottles.append(brand)
    for number, letter in enumerate(bottles,0):
        print'{}{}'.format(number, letter)
    bottleindex = raw_input ('Enter bottle number: ')
    if bottleindex=="0" or bottleindex=="X" or bottleindex=="x":
        get_letters()
        #error catch here please
        exit
        quit
    bottle = bottles[int(bottleindex)]
    weightval = raw_input('Enter bottle weight: ')
    try:
        with open(file,'a') as balrep:
            balrep.write("\n"+cdate+"\t,"+str(bottle)+"\t,"+weightval)
            balrep.close()
    except:
        balrep = open(file,"w+")
    get_letters()


def get_sums():
    cdate = str(format(datetime.today(),"%Y-%m-%d"))
    file = "C:/Users/rmorganstern/Desktop/PY/Overland/Balance_Report/"+cdate+".csv"
    #with open(file,'r') as bal_rep:
    balancereport = open(file,'r')
    while True:
        bline=balancereport.readline()
        if not bline: break
        totals=["Bottle","weight"]
        if "*" in bline :
            sumfile = "C:/Users/rmorganstern/Desktop/PY/Overland/Summary/"+cdate+".csv"
            try:
                with open(sumfile,'a') as summary:
                    summary.write(cdate+"\t,"+str(bottle)+"\t,"+weightval+"\n")
                    summary.close()
            except:
                summary = open(file,"w+")
                print "printed"
        else:
            try:
                curbot=bline.split(',')[1]
                print curbot
                totals[0]=curbot
                #totals[1]=bline.split(',')[2]
                print "tried "+curbot
            except:
                print bline.split(',')[0] +" error"

        
get_letters()
